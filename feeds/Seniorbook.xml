<?xml version="1.0" encoding="UTF-8"?>
<configdata>
    <seniorbook-topics>
        <name>seniorbook.de Topics</name>
        <url>http://www.seniorbook.de/feed/rss/themen/zone/topic</url>
        <method>dom</method>
        <dom>
            <xhtml>true</xhtml>
            <content>.articleText</content>
            <image>.topicImage img</image>
        </dom>
        <postProcess>
            <mobilizer></mobilizer>
            <removeAttribs></removeAttribs>
        </postProcess>
    </seniorbook-topics>
    <seniorbook-aid-project>
        <name>seniorbook.de Aid Project</name>
        <url>http://www.seniorbook.de/feed/rss/themen/zone/aidproject</url>
        <method>dom</method>
        <dom>
            <xhtml>true</xhtml>
            <content>.articleText</content>
            <image>.topicImage img</image>
        </dom>
        <postProcess>
            <mobilizer></mobilizer>
            <removeAttribs></removeAttribs>
        </postProcess>
    </seniorbook-aid-project>

    <seniorbook-hot-topics>
        <name>seniorbook.de Hot Topics</name>
        <composer>
            <url>http://www.seniorbook.de/themen</url>
            <dom>
                <teaserBox>
                    <content>
                        <a>#topTheme .firstArea .imgOverlayBottom a</a>
                        <title>span.title</title>
                    </content>
                </teaserBox>
            </dom>
        </composer>

        <method>dom</method>
        <dom>
            <xhtml>true</xhtml>
            <content>.articleText</content>
            <image>.topicImage img</image>
        </dom>
        <postProcess>
            <mobilizer></mobilizer>
            <removeAttribs></removeAttribs>
        </postProcess>
    </seniorbook-hot-topics>

</configdata>