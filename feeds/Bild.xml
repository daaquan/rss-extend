<?xml version="1.0" encoding="UTF-8"?>
<configdata>
	<bild>
		<name>Bild</name>
		<url>http://rss.bild.de/bild-news.xml</url>
		<method>dom</method>
        <dom>
            <xhtml>true</xhtml>
            <content>.txt p</content>
            <image>.iel img</image>
        </dom>
		<postProcess>
            <mobilizer></mobilizer>
            <removeAttribs></removeAttribs>
		</postProcess>
        <preProcess>
            <fixUrl>
                <regex><![CDATA[(^http.+\/l\/(.+))i]]></regex>
                <replace>
                    <search>0A</search>
                    <replaceWith>0</replaceWith>
                </replace>
                <replace>
                    <search>0B</search>
                    <replaceWith>.</replaceWith>
                </replace>
                <replace>
                    <search>0C</search>
                    <replaceWith>/</replaceWith>
                </replace>
                <replace>
                    <search>0D</search>
                    <replaceWith>?</replaceWith>
                </replace>
                <replace>
                    <search>0E</search>
                    <replaceWith>-</replaceWith>
                </replace>
                <replace>
                    <search>0F</search>
                    <replaceWith>=</replaceWith>
                </replace>
                <replace>
                    <search>0G</search>
                    <replaceWith>&amp;</replaceWith>
                </replace>
                <replace>
                    <search>0N</search>
                    <replaceWith>.com</replaceWith>
                </replace>
                <replace>
                    <search>0L0S</search>
                    <replaceWith>http://www.</replaceWith>
                </replace>
            </fixUrl>
        </preProcess>
	</bild>
</configdata>